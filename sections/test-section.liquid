{% comment %}
  This section is a test layout for displaying up to three product cards in a responsive grid.
  - Mobile: stacked layout (1 column)
  - Tablet: 2-column grid
  - Desktop: 3-column grid
{% endcomment %}

<div class="test-section full-width grid bg-[#f6f6f7] py-[72px]">
  <div class="content col-start-2 flex flex-col gap-5">
    {% if section.settings.show_section_title %}
      <div class="head">
        <h1>{{ section.settings.section_title }}</h1>
      </div>
    {% endif %}
    <div class="body">
      <div class="products grid grid-cols-1 gap-[50px] sm:grid-cols-2 lg:grid-cols-3">
        {% content_for 'blocks' %}
      </div>   
    </div>
  </div>
</div>

{% stylesheet %}
  .test-section {
    grid-template-columns: var(--content-grid);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Test Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Featured Products"
    },
    {
      "type": "checkbox",
      "id": "show_section_title",
      "label": "Show section title",
      "default": true
    },
    {
      "type": "select",
      "id": "variant_swatch_shape",
      "label": "Variant Swatch shape",
      "options": [
        { "value": "circle", "label": "Circle" },
        { "value": "square", "label": "Square" }
      ],
      "default": "circle"
    },
    {
      "type": "checkbox",
      "id": "show_discount_percentage",
      "label": "Show discount 'x% off'",
      "default": true
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "@theme"
    }
  ],
  "presets": [
    {
      "name": "Test Section",
      "category": "Test"
    }
  ]
}
{% endschema %}
