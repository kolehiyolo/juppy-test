{% comment %}
  This section is a test layout for displaying up to three product cards in a responsive grid.
  It is used to prototype layout and styling logic before integrating live Shopify product data.
  - Mobile: stacked layout (1 column)
  - Tablet: 2-column grid
  - Desktop: 3-column grid
{% endcomment %}

<div class="test-section full-width">
  <div class="content">
    {% if section.settings.show_section_title %}
      <div class="head">
        <h1>{{ section.settings.section_title }}</h1>
      </div>
    {% endif %}
    <div class="body">
      <div class="products">
        {% content_for 'blocks' %}
      </div>   
    </div>
  </div>
</div>

{% stylesheet %}
  .test-section {
    display: grid;
    grid-template-columns: var(--content-grid);
    background-color: #f6f6f7;
    padding: 72px 0;

    .content {
      grid-column: 2;
      display: flex;
      flex-direction: column;
      gap: 20px;

      .head {

      }

      .body {
        .products {
          display: grid;
          grid-template-columns: 1fr;
          gap: 50px;
        }

        /* Tablet (2 columns) */
        @media (min-width: 640px) {
          .products {
            grid-template-columns: repeat(2, 1fr);
          }
        }

        /* Desktop (3 columns) */
        @media (min-width: 1024px) {
          .products {
            grid-template-columns: repeat(3, 1fr);
          }
        }
      }
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Test Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Featured Products"
    },
    {
      "type": "checkbox",
      "id": "show_section_title",
      "label": "Show section title",
      "default": true
    },
    {
      "type": "select",
      "id": "variant_swatch_shape",
      "label": "Variant Swatch shape",
      "options": [
        { "value": "circle", "label": "Circle" },
        { "value": "square", "label": "Square" }
      ],
      "default": "circle"
    },
    {
      "type": "checkbox",
      "id": "show_discount_percentage",
      "label": "Show discount 'x% off'",
      "default": true
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "@theme"
    }
  ],
  "presets": [
    {
      "name": "Test Section",
      "category": "Test"
    }
  ]
}
{% endschema %}
